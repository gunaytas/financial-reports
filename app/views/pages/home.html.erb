            </div>

            <label for="table-search" class="sr-only">Search</label>
            <div class="relative " >
                <input type="text" id="table-search" class="block flex p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-purple-500 focus:border-purple-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500" placeholder="Search for items">
            </div>
        </div>
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400" style="text-align:center">
                <tr>
                    
                    <th scope="col" class="px-6 py-3">
                        Açıklama
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Tarih
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Kategori
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Miktar
                    </th>
                    <th scope="col" class="px-6 py-3">
                        -
                    </th>
                </tr>
            </thead>
            <tbody>
                <% if @transactions.present? %>
                <% @transactions.take(3).each do |transaction| %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-10" style="text-align:center">
                    
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= transaction.desc %>   
                    </th>
                    <td class="px-6 py-4 " >
                        <%= transaction.date %>
                    </td>
                    <% if transaction.category.blank? %>
                        <td class="px-6 py-4" >
                            <%= "-" %>
                        </td>
                      <% else %>
                        <td class="px-6 py-4" >
                            <%= transaction.category %>
                        </td>
                      <% end %>

                    <% if transaction.income == true %>
                        <td class="px-6 py-4 text-green-500 font-bold">
                            <%= "+ #{transaction.amount}" %>
                        </td>
                        <% else %>
                        <td class="px-6 py-4 text-red-500 font-bold">
                            <%= "- #{transaction.amount}" %>
                        </td>
                        <% end %>
                    <td class="px-6 py-4" >
                        <%= link_to "Detaylar", transaction_path(transaction), class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
                    </td>
                </tr>
                <% end %>
                <% else %>
                    <p>No transactions available.</p>
                <% end %>
            </tbody>
        </table>
        <div style="display: flex; justify-content: center; align-items: center;">
            <%= link_to "Daha Fazla Gör", transactions_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"%>
        </div>
    </div>
</div>


<script> 
    const getChartOptions = () => {
    return {
      series:  <%= @series_data.to_json.html_safe %>,
      colors: ["#1C64F2", "#16BDCA", "#D61F69","#E02424","#FACA15"],
      chart: {
        height: 420,
        width: "100%",
        type: "pie",
      },
      stroke: {
        colors: ["white"],
        lineCap: "",
      },
      plotOptions: {
        pie: {
          labels: {
            show: true,
          },
          size: "100%",
          dataLabels: {
            offset: -25
          }
        },
      },
      labels: <%= @categories.to_json.html_safe %>,
      dataLabels: {
        enabled: true,
        style: {
          fontFamily: "Inter, sans-serif",
        },
      },
      legend: {
        position: "bottom",
        fontFamily: "Inter, sans-serif",
      },
      yaxis: {
        labels: {
          formatter: function (value) {
            return value + "%"
          },
        },
      },
      xaxis: {
        labels: {
          formatter: function (value) {
            return value  + "%"
          },
        },
        axisTicks: {
          show: false,
        },
        axisBorder: {
          show: false,
        },
      },
    }
  }
  
  if (document.getElementById("pie-chart") && typeof ApexCharts !== 'undefined') {
    const chart = new ApexCharts(document.getElementById("pie-chart"), getChartOptions());
    chart.render();
  }
  
 </script>

