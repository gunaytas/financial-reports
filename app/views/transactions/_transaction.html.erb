

<div class= "relative p-4" >

    <!-- liste -->
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400" style="text-align:center">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Açıklama
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Tarih
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Kategori
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Miktar
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 h-10" style="text-align:center">
                    
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= transaction.desc %>   
                    </th>
                    <td class="px-6 py-4 " >
                        <%= transaction.date %>
                    </td>
                    <td class="px-6 py-4" >
                        <%= transaction.category %>
                    </td>
                    <td class="px-6 py-4" >
                        <%= transaction.amount %>
                    </td>
                    
                </tr>
            </tbody>
        </table>
    </div>

</div>

